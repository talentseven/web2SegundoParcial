<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC
"-//Hibernate/Hibernate Mapping DTD 3.0//EN"
"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
	<class name="ar.edu.uces.progweb2.booksmov.model.Author" table="AUTHORS" >
		<id name="id" column="ID">
			<generator class="native"/>
		</id>
		<property name="fullName" column="FULL_NAME" />
		
		<set name="books" table="authors_books" lazy="false" cascade="all" inverse="true">
            <key column="AUTHOR_ID" not-null="true" />
            <many-to-many entity-name="ar.edu.uces.progweb2.booksmov.model.Book">
                <column name="BOOK_ID" not-null="true" />
            </many-to-many>
        </set>
	</class>
</hibernate-mapping>